<div class="page-header">
    <h2>Edit Pubcrawl</h2>
</div>
<form action="/users/{{username}}/pubcrawls/{{pubcrawl._id}}?_method=PUT" method="POST">
    <div class="form-group">
        <label for="pubcrawl-name">Name</label>
        <input type="text" class="form-control" name="name" id="pubcrawl-name" value="{{pubcrawl.name}}" autofocus required>
    </div>
    <div class="form-group">
        <label for="pubcrawl-theme">Theme</label>
        <input type="text" class="form-control" name="theme" id="pubcrawl-theme" value="{{pubcrawl.theme}}">
    </div>
    <div class="form-group">
        <label for="pubcrawl-date">Date</label>
        <input type="date" class="form-control" name="date" id="pubcrawl-date" value="{{pubcrawl.date}}" required>
    </div>
    <div class="form-group">
        <label for="pubcrawl-startTime">Start Time</label>
        <input type="time" class="form-control" name="time" id="pubcrawl-startTime" value="{{pubcrawl.time}}" required>
    </div>
    <div class="form-group">
        <label for="pubcrawl-bars">Select Bars</label>
        {{#each bars}}
            <div class="checkbox">
                <label>
                  <input type="checkbox" value="{{this._id}}" name="checkedBars">
                  {{this.name}}
                </label>
            </div>
        {{/each}}
        <p>Add more bars <a href="/users/{{username}}/bars/new"><strong>here</strong></a>.</p>
    </div>

    <div class="form-group">
    <label for="pubcrawl-bars">Transportation</label>
      <div class="radio">
        <label>
          <input type="radio" name="transportation" value="walking">
          Walking
        </label>
      </div>
      <div class="radio">
        <label>
          <input type="radio" name="transportation" value="Bus">
          Bus
        </label>
      </div>
    </div>
    <div class="form-group">
      <label for="pubcrawl-startBar">Start Bar</label>
      <select class="form-control" id="pubcrawl-startBar" name="startBar">
        {{#each bars}}
         <option value="{{this._id}}">{{this.name}}</option>
         {{/each}}
       </select>
    </div>
    <div class="form-group">
        <label for="pubcrawl-specialInstructions">Special Instructions</label>
        <textarea class="form-control" rows="3" name="specialInstructions">{{pubcrawl.specialInstructions}}</textarea>
    </div>
    <button type="submit" class="btn btn-success">Submit</button>
    <a class="btn btn-default" href="/" type="button" name="button">Cancel</a>
</form>
<script type="text/javascript">
{{#each pubcrawl.bars}}
$('input[type="checkbox"][value="{{this._id}}"]').attr('checked', 'true');
{{/each}}
$('input[type="radio"][value="{{pubcrawl.transportation}}"]').attr('checked', 'true');
</script>
