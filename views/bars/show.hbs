<div class="page-header">
  <h2>Bar Details</h2>
</div>
<address>
  <strong>{{bar.name}}</strong><br>
  {{bar.address.street}}<br>
  {{bar.address.city}}, {{bar.address.state}}<br>
</address>
{{#if isOwner}}
<hr>
<form action="/users/{{username}}/bars/{{bar._id}}?_method=DELETE" method="post">
  <a class="btn btn-primary" href="/users/{{username}}/bars/{{bar._id}}/edit" type="button" name="button">Edit</a>
  <button class="btn btn-danger" type="submit" name="button">Delete</button>
</form>
{{/if}}
